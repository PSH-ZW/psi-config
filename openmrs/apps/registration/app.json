{
        "id": "bahmni.registration",
        "instanceOf":"bahmni.template.registration",
        "description": "Bahmni Patient Registration App",
        "extensionPoints": [
            {
                "id": "org.bahmni.registration.patient.search.result.action",
                "description": "Bahmni Patient Search Result Action"
            },
            {
                "id": "org.bahmni.registration.patient.next",
                "description": "After Bahmni Patient Registration, forward url configuration"
            }
        ],
        "contextModel": [
            "patientUuid",
            "activeVisitUuid"
        ],
        "config" : {
	"mandatoryPersonAttributes": [
	"Nationality",
	"education",
	"Population",
	"occupation",
	"Secondary contact",
	"Marital Status",
	"Telephone",
	"Ethnicity",
	"Workplace",
	"Client Resident",
	"Referral source",
	"District of Birth",
	"Next-of-kin Contact Name",
	"Next-of-kin Telephone Number",
	"Next-of-kin Address",
	"Mother's name"
	],
            "patientInformation": {
                "hidden": {
                    "attributes": [
                    ]
                },
                "defaults":  {
                   
                }
            },
            "addressHierarchy": {
                "showAddressFieldsTopDown": true
            },
            "defaultVisitType": "FIELD",
            "relationshipTypeMap": {
                "Parent":"patient",
                "Partner": "patient"
            },
            "autoCompleteFields":[],
            "defaultIdentifierPrefix": "NAH",
            "defaultVisitType": "OPD",
            "searchByIdForwardUrl": "/patient/{{patientUuid}}",
            "showMiddleName": true,
            "showLastName": true,
            "isLastNameMandatory": true,
            "showBirthTime": false,
            "showCasteSameAsLastNameCheckbox": false,
            "showEnterID":false,
            "printOptions": [
                {
                    "translationKey": "REGISTRATION_PRINT_SUPPLEMENTAL_PAPER",
                    "templateUrl": "/bahmni_config/openmrs/apps/registration/supplementalPaperLayout/print.html",
                    "shortcutKey": "r"
                },
                {
                    "translationKey": "REGISTRATION_PRINT_WITH_BARCODE",
                    "templateUrl": "/bahmni_config/openmrs/apps/registration/registrationCardLayout/printWithBarcode.html",
                    "shortcutKey": "c"
                }
            ],
            "conceptSetUI": {
              
                "REGISTRATION FEES": {
                    "required": true,
                    "label": "Fee"
                },

		"Reason for visit":{
		"required":true,
		"multiSelect":true
		},
                "FHS": {
                    "buttonSelect": true
                },
                "defaults":{
                    "FHS": "Present"
                }
            },
            "fieldValidation" : {
                "Telephone" : {"pattern" : "[0-9]{0,}", "errorMessage" : "Phone number can only be numerals"},
                "familyName" : {"pattern" : "[a-zA-Z]{0,}", "errorMessage" : "Should only contain characters"},
                "givenName" : {"pattern" : "[a-zA-Z]{0,}", "errorMessage" : "Should only contain characters"},
                "middleName" : {"pattern" : "[a-zA-Z]{2,}", "errorMessage" : "Should only contain characters"},
                "address1" : {"pattern" : "[a-zA-Z0-9 ]{0,}", "errorMessage" : "Should only contain characters and numbers"},
                "Next-of-kin Telephone Number" : {"pattern" : "[0-9]{0,}", "errorMessage" : "Phone number can only be numerals"}
            },
            "patientSearchResults": {
                "address": {
                    "fields" : ["postal_code"]
                },
                "personAttributes": {
                    "fields": [

                    ]
                }
            },
            "patientSearch": {
                "address": {
                    "label": "Ward",
                    "placeholder": "Enter ward",
                    "field": "POSTAL_CODE"
                },
                "customAttributes": {

                }
            }
        }
}
